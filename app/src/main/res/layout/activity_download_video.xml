<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".downloadVideoAct">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoNameET"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter Video name"
        />


    <VideoView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/videoToDownloadVV"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_below="@id/videoNameET"
        android:layout_marginEnd="10dp"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoToDownloadVV"
        android:id="@+id/downloadVideoBtn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Download Video"
        />



</RelativeLayout>